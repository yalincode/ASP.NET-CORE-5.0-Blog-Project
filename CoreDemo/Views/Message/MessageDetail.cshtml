@model EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "MessageDetail";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Mesaj Detay Sayfası</h1>

    @Html.Label("Mesaj ID")
    @Html.TextBoxFor(x=>x.MessageId,new {@class="form-control",@readonly="readonly"})
    <br />
    @Html.Label("Mesaj Başlığı")
    @Html.TextBoxFor(x=>x.Subject,new {@class="form-control",@readonly="readonly"})
    <br />
    @Html.Label("Mesaj İçeriği")
    @Html.TextAreaFor(x=>x.MessageDetails,10,3,new {@class="form-control",@readonly="readonly"})
    <br />
    <a class="btn btn-success" href="/Message/Inbox/">Gelen Mesajlara Dön</a>


